{
    "name": "Chair",
    "version": "0.0.1",
    "description": "Hack the North 2018 Project",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at" : "document_idle"
        }
    ],
    "manifest_version": 2
}

